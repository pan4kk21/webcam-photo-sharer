<WebcamScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            play: False
            size_hint_y: 0.8
        RoundedButton:
            markup: True
            text: "[font=GoogleSans-Medium]Start Camera[/font]" if root.ids.camera.play == False else "[font=GoogleSans-Medium]Stop Camera[/font]"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
        RoundedButton:
            markup: True
            text: "[font=GoogleSans-Medium]Capture Photo[/font]"
            on_press: root.capture() if root.ids.camera.play == True else None
            size_hint_y: 0.1

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: image
            size_hint_y: 0.7
        RoundedButton:
            markup: True
            text: "[font=GoogleSans-Medium]Create Sharable Link[/font]"
            on_press: root.create_link()
            size_hint_y: 0.1
        Label:
            markup: True
            id: filelink
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            spacing: 10
            RoundedButton:
                markup: True
                text: "[font=GoogleSans-Medium]Copy Link[/font]"
                on_press: root.copy_link()
            RoundedButton:
                markup: True
                text: "[font=GoogleSans-Medium]Open Link[/font]"
                on_press: root.open_link()

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (26/255,115/255,232/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [4]

<RootWidget>:
    WebcamScreen:
        id: webcamscreen
        name: "webcamscreen"
    ImageScreen:
        id: imagescreen
        name: "imagescreen"